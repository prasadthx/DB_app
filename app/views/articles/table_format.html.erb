<h1 align="center" class="margin">
  <b>
  Articles
  </b>
</h1>
<p align="center">

    <%= link_to "Create New Articles", new_article_path,class:"btn btn-primary margin" %>

</p>
<table border="2px" align="center" class="margin">
  <tr align="center">
    <th>
      ID
    </th>
    <th>
      Title
    </th>
    <th>
      Description
    </th>
    <th colspan="3">
      Actions
    </th>
  </tr>
  <% @articles.each do |s| %>
    <tr>
      <td> <%= s.id %></td>
      <td> <%= s.title %></td>
      <td> <%= s.description %></td>
      <td> <%= link_to "Edit article", edit_article_path(s.id) %></td>
      <td> <%= link_to "Show article", article_path(s.id) %></td>
      <td> <%= link_to "Delete article", article_path(s.id), method: :delete , data: {confirm:" Are you sure? "}  %></td>
    </tr>
  <% end %>
</table>


<hr color="white" width="400px">
<p align="center">
<%= link_to "View in tiles",articles_path ,class:"btn btn-primary btn-sm",type:"button" %>
</p>
