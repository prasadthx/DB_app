<%= render 'shared/errors' , obj:@article %>
<div class="col-xs-12 truss">
  <%= form_for @article do |s| %>
  <div class="form-group row">
    <div class="custom-control-label col-sm-2">
    <%= s.label :title  %>
    </div>
    <div class="col-sm-8">
    <%= s.text_field :title ,class:"form-control", placeholder: "Title of the article", autofocus: true %>
    </div>
  </div>

  <div class="form-group row">
    <div class="custom-control-label col-sm-2">
    <%= s.label :description %>
    </div>
    <div class="col-sm-8">
    <%= s.text_area :description ,rows:10,class:"form-control", placeholder: "Description of the article" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-1 offset-8">
    <%= s.submit class:"btn btn-primary btn-lg"%>
    </div>
  </div>

<% end %>
</div>
