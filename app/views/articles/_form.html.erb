<% if @article.errors.any? %>
  <h2>
    The following errors prevented article from saving
  </h2>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li>
        <%= msg %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= form_for @article do |s| %>

  <p>
    <%= s.label :title  %>  <br>
    <%= s.text_field :title %>
  </p>

  <p>
    <%= s.label :description %> <br>
    <%= s.text_area :description %>
  </p>

  <p>
    <%= s.submit %>
  </p>

<% end %>
