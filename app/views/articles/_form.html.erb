<% if @article.errors.any? %>
  <h2>
    The following errors prevented article from saving
  </h2>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li>
        <%= msg %>
      </li>
    <% end %>
  </ul>
<% end %>
<div class="col-md-12 truss">
<%= form_for @article do |s| %>
  <div class="form-group">

    <%= s.label :title  %>  <br>
    <%= s.text_field :title ,class:"form-control", placeholder: "Title of the article", autofocus: true %>

  </div>

  <div class="form-group">

    <%= s.label :description %> <br>
    <%= s.text_area :description ,class:"form-control", placeholder: "Title of the article" %>

  </div>

  <div class="form-group">
    <%= s.submit class:"btn btn-primary btn-lg"%>
  </div>

<% end %>
</div>
