 <h2 align="center" class="margin">

    Title: <%= @article.title %>

 </h2>


<div class="card h-200 colour text-center">
  <h5 class="card-header card-title" align="center">Description:</h5>
  <div class="card-body">

    <p class="card-text btn" style=" height: 10rem;">
      <%= @article.description%>
    </p>
    <hr>
    <%= link_to "Back to Articles", articles_path ,class:"btn btn-primary btn-sm" %>
    <%= link_to "Delete article", article_path,class:"btn btn-danger btn-sm", method: :delete , data: {confirm:" Are you sure? "}  %>
    <%= link_to "Edit this form", edit_article_path,class:"btn btn-primary btn-sm" %>
  </div>
</div>





