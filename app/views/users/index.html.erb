<h2 align="center" class="margin">
  All Zeta Blog Members
</h2>
<div align="center">
  <%= will_paginate %>
<% @users.each do |user| %>
  <div class="row text-dark margin">
    <div class="col-md-4 offset-4">
      <div class="card">
        <div class="card-header card-title">
          <%= link_to gravatar_for(user), user_path(user)  %>
        </div>
        <div class="card-body">
          <div class="card-text" style=" height: 4rem;">
            <%= link_to user.username, user_path(user)  %>
            <div class="card-footer" style="margin-top: 10px">
             <small>
               <%= pluralize(user.articles.count,"article") if user.articles %>
             </small>
             <% if logged_in? && current_user.admin? %>
              <%= link_to "Delete this user" , user_path(user) , method: :delete , data: {confirm: "Are you sure you want to delete the user and all their articles?"} %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
</div>