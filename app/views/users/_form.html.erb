<%= render 'shared/errors' , obj:@user %>
<div class="col-xs-12 truss">
  <%= form_for @user do |s| %>
    <div class="form-group row">
      <div class="custom-control-label col-sm-2">
        <%= s.label :username  %>
      </div>
      <div class="col-sm-8">
        <%= s.text_field :username ,class:"form-control", placeholder: "Enter Username", autofocus: true %>
      </div>
    </div>

    <div class="form-group row" style="margin-top: 30px">
      <div class="custom-control-label col-sm-2">
        <%= s.label :email %>
      </div>
      <div class="col-sm-8">
        <%= s.text_area :email ,class:"form-control", placeholder: "Enter email" %>
      </div>
    </div>

    <div class="form-group row" style="margin-top: 30px">
      <div class="custom-control-label col-sm-2">
        <%= s.label :password %>
      </div>
      <div class="col-sm-8">
        <%= s.password_field :password ,class:"form-control", placeholder: "Enter Password" %>
      </div>
    </div>
    <hr color="white" class="margin">
    <div class="form-group row" style="margin-top: 30px">
      <div class="col-sm-1 offset-5">
        <%= s.submit(@user.new_record? ? "Sign Up" : "Update Account" , class:"btn btn-primary btn-lg") %>
      </div>
    </div>

  <% end %>
</div>
