<h1 align="center" class="margin">Login</h1>

<div class="col-xs-12 truss">
  <%= form_for(:session , url: login_path) do |s| %>

    <div class="form-group row" style="margin-top: 30px">
      <div class="custom-control-label col-sm-2">
        <%= s.label :email %>
      </div>
      <div class="col-sm-8">
        <%= s.email_field :email ,class:"form-control", placeholder: "Enter email" , autofocus: true %>
      </div>
    </div>

    <div class="form-group row" style="margin-top: 30px">
      <div class="custom-control-label col-sm-2">
        <%= s.label :password %>
      </div>
      <div class="col-sm-8">
        <%= s.password_field :password ,class:"form-control", placeholder: "Enter Password" , autocomplete:"off" %>
      </div>
    </div>
    <hr color="white" class="margin">
    <div class="form-group row" style="margin-top: 30px">
      <div class="col-sm-1 offset-5">
        <%= s.submit "Log in" , class:"btn btn-primary btn-lg" %>
      </div>
    </div>

  <% end %>
</div>
